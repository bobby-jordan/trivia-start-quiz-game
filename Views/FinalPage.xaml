<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaStarQuizGame.Views.FinalPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Primary}">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <!-- Title -->
        <Label Text="Nice work"
               FontSize="50"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <!-- Glowing Checkmark -->
        <Image Source="checkmark.png" HeightRequest="250" WidthRequest="250" />

        <!-- Score -->
        <Label Text="{Binding Score, StringFormat='You Earned {0} pts'}" 
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Button Text="Play Again" Command="{Binding PlayAgainCommand}" 
           HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
