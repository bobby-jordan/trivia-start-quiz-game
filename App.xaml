<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TriviaStarQuizGame"
             xmlns:converters="clr-namespace:TriviaStarQuizGame.Converters"
             x:Class="TriviaStarQuizGame.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:SelectedAnswerBackgroundConverter x:Key="SelectedAnswerBackgroundConverter" />
            <converters:SelectedAnswerBorderConverter x:Key="SelectedAnswerBorderConverter" />
            <converters:SubmitButtonColorConverter x:Key="SubmitButtonColorConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
